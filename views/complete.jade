extends layout

block content
  div.row
    div.col-md-12.text-center
      if error
        div.alert.alert-danger
          p= error
      else
        div.alert.alert-success
          p Sukses! Postcard kamu telah berhasil dibuat. Kamu dapat melihat salinannya disini:
            a(href=url, target="_blank")= url

      a.btn.btn-primary(href="/") Buat Postcard lain